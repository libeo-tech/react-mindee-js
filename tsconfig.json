{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": "src",
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", ".storybook", "./src/stories"]
}
